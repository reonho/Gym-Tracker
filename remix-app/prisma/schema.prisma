generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["mongoDb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model exercises {
  id           String  @id @default(dbgenerated()) @map("_id") @db.ObjectId
  muscle_group String
  name         String
  variant      String?
}

model workouts {
  id        String @id @default(dbgenerated()) @map("_id") @db.ObjectId
  datetime  Json
  exercises Json[]
  location  String
  name      String
  userId    String
}
